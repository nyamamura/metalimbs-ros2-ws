<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="model" default="$(find metalimbs_description)/robot/metalimbs2.urdf.xacro" />
  <arg name="rvizconfig" default="$(find metalimbs_description)/rviz/real.rviz" />

  <param name="/use_sim_time" value="false"/>
  <param name="robot_description" command="$(find xacro)/xacro $(arg model)"/>

  <node name="map_to_baselink_broadcaster" pkg="tf2_ros" type="static_transform_publisher" args="0 0 0 1 0 0 0 map base_link" />

  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig) --verbose" required="true" />

  <rosparam file="$(find metalimbs_description)/config/controller.yaml" command="load" />
  <node name="metalimbs_hardware_node" pkg="metalimbs_hardware" type="metalimbs_hardware_node" output="screen" />
  <node name="controller_spawner" pkg="controller_manager"
        type="spawner" respawn="false"
        output="screen" ns="/metalimbs"
        args="left_shoulder2_mount_joint_position_controller right_shoulder2_mount_joint_position_controller
              left_shoulder2_joint_position_controller right_shoulder2_joint_position_controller
              left_upper_arm_joint_position_controller right_upper_arm_joint_position_controller
              left_elbow_joint_position_controller right_elbow_joint_position_controller 
              left_forearm_joint_position_controller right_forearm_joint_position_controller 
              left_wrist_joint_position_controller right_wrist_joint_position_controller 
              left_handunit_mount_joint_position_controller right_handunit_mount_joint_position_controller" />

</launch>
